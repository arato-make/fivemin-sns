<div class="uk-text-center">
  <div class="uk-card uk-card-default uk-padding uk-position-center">
    <div class="uk-margin-small">
      <img src="/logo.gif">
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="uk-margin">
        <div class="uk-inline">
          <span class="uk-form-icon" uk-icon="icon: user"></span>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "uk-input"%>
        </div>
      </div>

      <div class="uk-margin">
        <div class="uk-inline">
          <span class="uk-form-icon" uk-icon="icon: lock"></span>
          <%= f.password_field :password, autocomplete: "current-password", class: "uk-input" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="uk-margin">
        <%= f.submit "Log in", class: "uk-button uk-button-default"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>